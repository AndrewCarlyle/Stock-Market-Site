html
  head
    a="Recommendations for: " + accounts
    br
    br
    style
      include css/AccountList.css
    script
      include js/AccountList.js

  body
    br
    div(id="accountList")
      each account in accounts
        br
        br
        a(href="/Accounts/"+account.AcctNum id="account")=account.Type + " (" + account.AcctNum + ")"
        br
        a="Balance: $" + account.Balance

    br
    button(id="btnRecommendations" onclick="getRecommendations()")="Get Recommendations"
    br
    br
    a="Looking to open a new account? Please select the type for your new account: "
    br
    br

    select(id="accountTypeSelect")="test"
      each opt in optionList
        option(value=opt)=opt

    button(onclick="openAccount()")="Open Account"
